<%= form_with model:book, local: true do |f| %>
  <div class= "form_group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class = "form_group">
    <%= f.label :opinion %>
    <%= f.text_area :body  %>
  </div>
  <div class = "form_group">
    <%= f.submit class: 'btn btn-success'%>
  </div>
<% end %>
